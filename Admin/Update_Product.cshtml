                                    @Html.ValidationMessage("brand")
                                </div>
                            </td>
                        </tr>
                        <tr><td>Category:</td>
                            <td>
                                <select id="cat" name="cat">
                                    <option></option>
                                    @foreach(var item in cats){
                                        <option>@item.Title</option>
                                    }
                                </select>                            
                            </td>                            
                        </tr>                        
                        <tr><td>&nbsp;</td><td><input type="submit" value="Save"></td></tr>
